    <div class="container">
        <h1>PViewer - Monitor Danych</h1>

        <div class="cards">
            <div class="card green">
                <div class="card-label">Wartość 1</div>
                <div class="card-value" id="value1">-</div>
                <div class="card-subtitle">measure-label #1</div>
            </div>

            <div class="card blue">
                <div class="card-label">Wartość 2</div>
                <div class="card-value" id="value2">-</div>
                <div class="card-subtitle">measure-label #2</div>
            </div>
        </div>

        <div class="controls">
            <button id="refreshBtn">Odśwież</button>
        </div>

        <div id="status" class="status"></div>
    </div>

    <script>
        const TARGET_URL = 'https://swiv.grupawp.pl/#olap_';

        let isLoading = false;

        const value1El = document.getElementById('value1');
        const value2El = document.getElementById('value2');
        const refreshBtn = document.getElementById('refreshBtn');
        const statusEl = document.getElementById('status');

        async function fetchData() {
            if (isLoading) return;

            isLoading = true;
            refreshBtn.disabled = true;
            refreshBtn.innerHTML = 'Ładowanie...<span class="loading"></span>';
            statusEl.innerHTML = '';

            // Show skeleton loading
            value1El.innerHTML = '<div class="skeleton"></div>';
            value2El.innerHTML = '<div class="skeleton"></div>';

            try {
                const response = await fetch(TARGET_URL, {
                    method: 'GET',
                    credentials: 'include', // Include cookies for VPN authentication
                    mode: 'cors',
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const html = await response.text();

                // Parse HTML to find measure-label divs
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                const measureLabels = doc.querySelectorAll('.measure-label');

                if (measureLabels.length >= 2) {
                    const val1 = measureLabels[0].textContent.trim();
                    const val2 = measureLabels[1].textContent.trim();

                    // Format numbers with spaces for thousands
                    value1El.textContent = formatNumber(val1);
                    value2El.textContent = formatNumber(val2);

                    statusEl.innerHTML = `<div class="success">Dane zaktualizowane: ${new Date().toLocaleTimeString('pl-PL')}</div>`;
                } else {
                    throw new Error('Nie znaleziono wymaganych elementów measure-label w HTML');
                }

            } catch (error) {
                console.error('Error fetching data:', error);
                value1El.textContent = 'Błąd';
                value2El.textContent = 'Błąd';

                let errorMessage = 'Nie można pobrać danych. ';

                if (error.message.includes('Failed to fetch') || error.name === 'TypeError') {
                    errorMessage += 'Sprawdź czy jesteś połączony z VPN i czy masz dostęp do swiv.grupawp.pl';
                } else {
                    errorMessage += error.message;
                }

                statusEl.innerHTML = `<div class="error">${errorMessage}</div>`;
            } finally {
                isLoading = false;
                refreshBtn.disabled = false;
                refreshBtn.textContent = 'Odśwież';
            }
        }

        function formatNumber(num) {
            // Format number with spaces as thousands separator
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ');
        }

        // Event listener for refresh button
        refreshBtn.addEventListener('click', fetchData);

        // Auto-load data on page load
        fetchData();

        // Optional: Auto-refresh every 5 minutes
        // setInterval(fetchData, 5 * 60 * 1000);
    </script>
